<Page x:Class="FinalDbProject.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalDbProject"
        d:DesignHeight="450" d:DesignWidth="800"
        mc:Ignorable="d"
        Title="Memory Game!" Background="Black">
    <Grid Name="MainGrid">
        <Viewbox StretchDirection="Both" Stretch="Uniform">
            <Grid Name ="GameGrid">
                <TextBlock  HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Text=" Time: " FontSize="20" FontFamily="Segoe UI Light" Foreground="White"/>
                <TextBlock x:Name="TimerDisplay" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" FontFamily="Segoe UI Light" FontSize="20" Foreground="White"/>
                <TextBlock  x:Name="Compliment" HorizontalAlignment="Left" Grid.Row="0" FontSize="20" FontFamily="Segoe UI Light" Foreground="Red"/>
                <Button x:Name="SolveGameButton" Content="Solve Game!" Grid.Row="0" Grid.Column="2" Click="SolveGame"></Button>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
            </Grid>
        </Viewbox>
    </Grid>

</Page>
